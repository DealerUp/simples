{
  "name": "phpzm/simples",
  "type": "project",
  "minimum-stability": "dev",
  "version": "0.1.4",
  "license": "MIT",
  "authors": [
    {
      "name": "William",
      "email": "wilcorrea@gmail.com"
    }
  ],
  "require": {
    "phpzm/core": "^1.0.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/src/"
    }
  },
  "config": {
    "timeout": 86400
  },
  "scripts": {
    "env:init" :"cp .env.sample .env",
    "docker:init" :"cp docker-compose.yml.sample docker-compose.yml",
    "docker:serve" :"docker-compose up",
    "php:8080": "php -S localhost:8080 -t public/",
    "php:serve": "@composer run php:8080 --timeout=0"
  }
}
